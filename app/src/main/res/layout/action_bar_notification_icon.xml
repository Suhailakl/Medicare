<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/admin_notification_layout"
    android:clickable="true"
    style="@android:style/Widget.ActionButton">

    <ImageView
        android:id="@+id/admin_notification_count_icon"
        android:src="@mipmap/ic_notification_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/admin_notification_count"
        android:layout_width="16dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_height="16dp"
        android:gravity="center"
        android:text="10"
        android:layout_alignTop="@id/admin_notification_count_icon"
        android:layout_alignRight="@id/admin_notification_count_icon"
        android:background="@drawable/rounded_notification_square"/>
</RelativeLayout>