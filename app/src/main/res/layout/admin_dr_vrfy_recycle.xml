<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/admin_vrfy_recycle_drName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/dctname"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/admin_vrfy_recycle_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admin_vrfy_recycle_drName"
        android:layout_alignStart="@+id/admin_vrfy_recycle_drName"
        android:layout_below="@+id/admin_vrfy_recycle_drName"
        android:layout_marginTop="7dp"
        android:text="@string/city"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/admin_vrfy_recycle_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="25dp"
        android:text="@string/ago"
        android:textSize="25dp" />
</RelativeLayout>