<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/book_doc"
    android:paddingTop="40dp"
    tools:context="com.jrs.medicare.BookDocFragment"
   >

    <FrameLayout
        android:id="@+id/book_doc_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/shape_window_dim"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tk_name"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView13"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/textView13"
                        android:layout_marginLeft="28dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="46dp"
                        android:text="Dr.Name"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tk_dpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tk_name"
                        android:layout_marginLeft="33dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Department"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/book_doc_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="40dp"
                        app:srcCompat="@drawable/adrs_border" />

                    <ProgressBar
                        android:id="@+id/book_doc_img_pro"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/book_doc_img"
                        android:layout_alignRight="@+id/book_doc_img"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="29dp"
                        android:layout_marginRight="29dp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tk_hspname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Works At"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="27dp"
                        android:layout_weight="0.05"
                        android:lines="2"
                        android:text="@string/hsptalads"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tk_ads"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.03"
                        android:background="@drawable/adrs_border"
                        android:lines="4"
                        android:maxLines="4"
                        android:text="address"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/tk_ads"
                        android:layout_alignStart="@+id/tk_ads"
                        android:layout_below="@+id/tk_ads"
                        android:layout_marginTop="20dp"
                        android:background="@android:drawable/stat_sys_phone_call_forward" />

                    <TextView
                        android:id="@+id/tk_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="136dp"
                        android:layout_toEndOf="@+id/imageView20"
                        android:layout_toRightOf="@+id/imageView20"
                        android:text="Phone"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView18"
                        android:layout_below="@+id/imageView3"
                        android:layout_marginTop="160dp"
                        android:lines="2"
                        android:text="@string/days"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tk_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView15"
                        android:layout_marginLeft="-32dp"
                        android:layout_toEndOf="@+id/textView15"
                        android:layout_toRightOf="@+id/textView15"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView15"
                        android:layout_alignStart="@+id/textView15"
                        android:layout_below="@+id/textView15"
                        android:layout_marginTop="18dp"
                        android:text="@string/time"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tk_time"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="78dp"
                        android:layout_marginTop="233dp"
                        android:text="Time" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView17"
                        android:layout_alignStart="@+id/textView17"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="277dp"
                        android:text="@string/date"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/tk_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="280dp" />


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/mR_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SurfaceView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#d6e8f5"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/bkDoc_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/take_tok"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp" />

            <Button
                android:id="@+id/take_tok"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp"
                android:background="@drawable/button_shape"
                android:text="@string/takeTok"
                android:textColor="@color/white" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>