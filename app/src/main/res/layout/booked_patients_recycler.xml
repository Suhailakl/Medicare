<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/text_view_border_color_blue">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/doc_bkPt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="@string/patientName"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/doc_bkPt_btn_cncl"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="@string/cncel"
        android:background="@drawable/button_red_color"
        android:layout_alignTop="@+id/doc_bkPt_name"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true" />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:drawable/stat_sys_phone_call_forward"
    android:layout_alignBottom="@+id/doc_bkPt_no"
    android:layout_marginLeft="205dp"/>
    <TextView
        android:id="@+id/doc_bkPt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ph"
        android:textSize="20dp"
        android:layout_marginLeft="230dp"
        android:layout_below="@+id/doc_bkPt_btn_cncl" />

    <TextView
        android:id="@+id/doc_bkPt_usrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usrnm"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/doc_bkPt_no"
        android:layout_alignBottom="@+id/doc_bkPt_no"
        android:layout_alignLeft="@+id/doc_bkPt_name"
        android:layout_alignStart="@+id/doc_bkPt_name" />


</RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/doc_bkPt__tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1."
        android:layout_marginTop="10dp"/>
</LinearLayout>
</RelativeLayout>